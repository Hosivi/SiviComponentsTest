@typeparam TModel@using BusinessSharedKernell@inherits SVInputBase<TModel>@if (ConditionalRendering) {    <fieldset @attributes="Attributes">        <legend>@Title</legend>        @ChildContent    </fieldset>}<style>    legend {        font-size: 1.2rem !important;        float: unset;       padding: 1rem !important;        margin-bottom: 1rem !important;        width: inherit !important;	    text-transform: uppercase;    }    fieldset {        margin: inherit !important;        border: 1px solid black;        padding: 1rem !important;    }</style>@code {    [Parameter]    public string? Title { get; set; }}